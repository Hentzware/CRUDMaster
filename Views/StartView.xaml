<UserControl
    x:Class="CRUDMaster.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CRUDMaster.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    mc:Ignorable="d">
    <Border
        Padding="50"
        BorderBrush="Black"
        BorderThickness="1">
        <StackPanel>
            <Label
                HorizontalAlignment="Center"
                Content="CRUD Master"
                FontSize="24"
                FontWeight="Bold" />
            <Label HorizontalAlignment="Center" Content="Create Read Update Delete" />
            <Button
                Height="50"
                Margin="0,20,0,0"
                Command="{Binding OpenSolutionCommand}"
                Content="Projektmappe öffnen" />
        </StackPanel>
    </Border>
</UserControl>
